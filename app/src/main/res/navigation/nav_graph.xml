<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="me.rytek.shoppinglist.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_selectFamily"
            app:destination="@id/selectFamily"
            app:enterAnim="@anim/fragment_close_enter"
            app:exitAnim="@anim/fragment_close_exit" />
    </fragment>
    <fragment
        android:id="@+id/selectFamily"
        android:name="me.rytek.shoppinglist.fragments.selectFamily.SelectFamily"
        android:label="fragment_select_family"
        tools:layout="@layout/fragment_select_family" >
        <action
            android:id="@+id/action_selectFamily_to_selectList"
            app:destination="@id/selectList" />
    </fragment>
    <fragment
        android:id="@+id/selectList"
        android:name="me.rytek.shoppinglist.fragments.selectList.SelectList"
        android:label="Select A Shopping List" >
        <action
            android:id="@+id/action_selectList_to_shoppingList"
            app:destination="@id/shoppingList" />
    </fragment>
    <fragment
        android:id="@+id/shoppingList"
        android:name="me.rytek.shoppinglist.fragments.shoppingList.ShoppingList"
        android:label="Shopping List" />
</navigation>