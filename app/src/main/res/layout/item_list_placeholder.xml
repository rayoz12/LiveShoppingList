<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/itemInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mtrl_list_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp" />

        <TextView
            android:id="@+id/mtrl_list_item_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/mtrl_list_item_icon"
            android:maxLines="1"
            android:layout_marginTop="16dp"
            android:paddingEnd="16dp"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:background="#dddddd"/>

        <TextView
            android:id="@+id/mtrl_list_item_secondary_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mtrl_list_item_text"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/mtrl_list_item_icon"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:background="#dddddd"
            android:paddingEnd="16dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/addedBy"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginTop="16dp"
            android:paddingEnd="16dp"
            android:background="#dddddd"/>

        <TextView
            android:id="@+id/dateModified"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/addedBy"
            android:layout_gravity="center_vertical"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:paddingEnd="16dp"
            android:background="#dddddd" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>